{
    "appenders": {
        "outLog": {
            "type": "stdout",
            "category": "outLog",
            "layout": {
                "type": "pattern",
                "level": "info",
                "pattern": "%d{yyyy-MM-dd hh:mm:ss} %p: %m%n"
            }
        },
        "serverLog": {
            "type": "file",
            "filename": "logging/serverLog.txt",
            "category": "serverLog",
            "layout": {
                "type": "pattern",
                "level": "info",
                "pattern": "%d{yyyy-MM-dd hh:mm:ss} %p: %m%n"
            }
        }
    },

    "categories": {
        "default": {
            "appenders": [
                "outLog",
                "serverLog"
            ],
            "level": "info"
        }
    }
}